<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Menu1"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-11dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/satuImage"
                    android:text="Akbar Maulana"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/satuImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_baseline_person_24"/>


                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Menu1"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="-255dp"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@+id/satuImage"
                    android:layout_toRightOf="@+id/Menu1"
                    android:drawableLeft="@drawable/ic_baseline_south_west_24"
                    android:text="(2)"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Menu1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/text2"
                    android:text="Kemarin 12.21"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="37dp"
                    android:layout_height="41dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="17dp"
                    android:src="@drawable/ic_baseline_phone_24" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Menu2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-11dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/duaImage"
                    android:text="sukimin"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/duaImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/ic_baseline_person_24"/>


                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Menu2"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="-255dp"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@+id/duaImage"
                    android:layout_toRightOf="@+id/Menu2"
                    android:drawableLeft="@drawable/ic_baseline_south_west_24"
                    android:text="(2)"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Menu2"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/text3"
                    android:text="Kemarin 13.21"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/call2"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/ic_baseline_phone_24" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
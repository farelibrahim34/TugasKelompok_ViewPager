<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StatusFragment">

    <!-- TODO: Update blank fragment layout -->

    <!-- My status card view-->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_my_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_preview"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/wa_status"
                app:civ_border_color="@color/gray"
                app:civ_border_width="3dp" />

            <TextView
                android:id="@+id/nm_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/img_preview"
                android:paddingTop="5dp"
                android:text="My Status"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm_status"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/img_preview"
                android:paddingTop="5dp"
                android:text="2 Minutes ago" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/add_status"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_more_horiz_24" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="81dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Updates"
        android:padding="5dp"
        android:background="@color/gray"
        android:textColor="@color/black"
        />
    <!-- Recent Updates card view-->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="111dp"
        android:id="@+id/card_recent_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_preview_recent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/wa_status"
                app:civ_border_color="@color/teal_700"
                app:civ_border_width="3dp" />

            <TextView
                android:id="@+id/nm_status_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/img_preview_recent"
                android:paddingTop="5dp"
                android:text="Contact"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timestamp_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm_status_recent"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/img_preview_recent"
                android:paddingTop="5dp"
                android:text="10 Minutes ago" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="192dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Viewed Updates"
        android:padding="5dp"
        android:background="@color/gray"
        android:textColor="@color/black"
        />
    <!-- Viewed Updates card view-->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="221dp"
        android:id="@+id/card_viewed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_preview_viewed"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/wa_status"
                app:civ_border_color="@color/gray"
                app:civ_border_width="3dp" />

            <TextView
                android:id="@+id/nm_status_viewed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/img_preview_viewed"
                android:paddingTop="5dp"
                android:text="Contact 2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timestamp_viewd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nm_status_viewed"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/img_preview_viewed"
                android:paddingTop="5dp"
                android:text="10 Minutes ago" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>